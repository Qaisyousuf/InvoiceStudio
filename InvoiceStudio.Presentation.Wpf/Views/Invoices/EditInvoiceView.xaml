<Window x:Class="InvoiceStudio.Presentation.Wpf.Views.Invoices.EditInvoiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Invoice" 
        Width="800" 
        Height="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Info -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Invoice Number" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding InvoiceNumber}" IsReadOnly="True" Background="#F0F0F0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Client" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding AvailableClients}" 
                          SelectedItem="{Binding SelectedClient}"
                          DisplayMemberPath="Name" 
                          IsEnabled="False"
                          Background="#F0F0F0"/>
            </StackPanel>
        </Grid>

        <!-- Lines Section -->
        <GroupBox Grid.Row="1" Header="Invoice Lines" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Add Line Button -->
                <Button Grid.Row="0" Content="Add Line" 
                        Command="{Binding AddLineCommand}"
                        HorizontalAlignment="Left" 
                        Margin="0,0,0,10"
                        Padding="15,5"
                        Background="#10B981" 
                        Foreground="White" 
                        BorderThickness="0"/>

                <!-- Lines DataGrid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Lines}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Description" 
                                            Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                            Width="200"/>
                        <DataGridTextColumn Header="Quantity" 
                                            Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Unit Price" 
                                            Binding="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Tax Rate" 
                                            Binding="{Binding TaxRate, UpdateSourceTrigger=PropertyChanged, StringFormat=P}"
                                            Width="80"/>
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Remove" 
                                            Command="{Binding DataContext.RemoveLineCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#DC2626" 
                                            Foreground="White" 
                                            BorderThickness="0"
                                            Padding="8,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Notes -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Notes" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                     Height="60" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Terms -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Terms" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Terms, UpdateSourceTrigger=PropertyChanged}" 
                     Height="60" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    Margin="0,0,10,0" 
                    Padding="20,10"
                    Background="#6B7280" 
                    Foreground="White" 
                    BorderThickness="0"/>
            <Button Content="Update Invoice" 
                    Click="SaveButton_Click"
                    Padding="20,10"
                    Background="#8B5CF6" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5" 
                Background="#80000000">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="Saving..." 
                       Foreground="White" 
                       FontSize="18" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>