<Window x:Class="InvoiceStudio.Presentation.Wpf.Views.Clients.ClientDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <!-- Name -->
                <TextBlock Text="Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" 
                         Margin="0,0,0,15"/>

                <!-- Legal Name -->
                <TextBlock Text="Legal Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding LegalName, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" 
                         Margin="0,0,0,15"/>

                <!-- Type -->
                <TextBlock Text="Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox SelectedIndex="{Binding SelectedTypeIndex}" 
                          Padding="10" 
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Individual"/>
                    <ComboBoxItem Content="Company"/>
                    <ComboBoxItem Content="Public Sector"/>
                </ComboBox>

                <!-- Country -->
                <TextBlock Text="Country *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox SelectedIndex="{Binding SelectedCountryIndex}" 
                          Padding="10" 
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="🇫🇷 France (FR)"/>
                    <ComboBoxItem Content="🇩🇰 Denmark (DK)"/>
                </ComboBox>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" 
                         Margin="0,0,0,15"/>

                <!-- Phone -->
                <TextBlock Text="Phone" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" 
                         Margin="0,0,0,15"/>

                <!-- Street -->
                <TextBlock Text="Street" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" 
                         Margin="0,0,0,15"/>

                <!-- City & Postal Code -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="City" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Postal Code" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10"/>
                    </StackPanel>
                </Grid>

                <!-- Currency & Payment Terms (Auto-filled based on country) -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Preferred Currency (Auto)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#7F8C8D"/>
                        <TextBox Text="{Binding PreferredCurrency, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10"
                                 IsReadOnly="True"
                                 Background="#F8F9FA"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Payment Days" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding PaymentTermDays, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10"/>
                    </StackPanel>
                </Grid>

                <!-- Active -->
                <CheckBox Content="Active" 
                          IsChecked="{Binding IsActive}" 
                          Margin="0,5,0,0"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" 
                Padding="30,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" 
                        Click="CancelButton_Click"
                        Padding="20,10" 
                        Margin="0,0,10,0"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="Save" 
                        Command="{Binding SaveCommand}"
                        Click="SaveButton_Click"
                        Padding="20,10"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>