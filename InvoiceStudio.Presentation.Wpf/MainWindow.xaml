<Window x:Class="InvoiceStudio.Presentation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvoiceStudio - AI-Powered Invoice Generator" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2C3E50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Border Grid.Row="0" Background="#1A252F" Padding="20">
                    <StackPanel>
                        <TextBlock Text="InvoiceStudio" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="AI-Powered Invoicing" 
                                   FontSize="11" 
                                   Foreground="#95A5A6"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">
                        <Button Style="{StaticResource NavigationButtonStyle}"
                                Content="📊 Dashboard"
                                Command="{Binding NavigateToDashboardCommand}"/>

                        <Button Style="{StaticResource NavigationButtonStyle}"
                                Content="📄 Invoices"
                                Command="{Binding NavigateToInvoicesCommand}"/>

                        <Button Style="{StaticResource NavigationButtonStyle}"
                                Content="👥 Clients"
                                Command="{Binding NavigateToClientsCommand}"/>

                        <Button Style="{StaticResource NavigationButtonStyle}"
                                Content="📦 Products"
                                Command="{Binding NavigateToProductsCommand}"/>

                        <Button Style="{StaticResource NavigationButtonStyle}"
                                Content="📈 Reports"
                                Command="{Binding NavigateToReportsCommand}"/>
                        <Button Style="{StaticResource NavigationButtonStyle}"
                                Content="🏢 Company"
                                Command="{Binding NavigateToCompanyCommand}"/>

                        <Button Style="{StaticResource NavigationButtonStyle}"
                                Content="⚙️ Settings"
                                Command="{Binding NavigateToSettingsCommand}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2" Background="#1A252F" Padding="15,10">
                    <TextBlock Text="v1.0.0" 
                               FontSize="10" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <!-- Content Area - Bound to CurrentView -->
            <ContentControl Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>