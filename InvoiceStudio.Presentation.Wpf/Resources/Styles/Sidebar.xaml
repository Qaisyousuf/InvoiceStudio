<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Sidebar Container -->
    <Style x:Key="SidebarContainer" TargetType="Border">
        <Setter Property="Width" Value="260"/>
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>

    <!-- Sidebar Grid Layout -->
    <Style x:Key="SidebarGrid" TargetType="Grid">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Logo Container -->
    <Style x:Key="LogoContainer" TargetType="Border">
        <Setter Property="Padding" Value="20,28"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Logo Title -->
    <Style x:Key="LogoTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Logo Subtitle -->
    <Style x:Key="LogoSubtitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="Typography.Capitals" Value="AllSmallCaps"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- Nav Container ScrollViewer -->
    <Style x:Key="NavScrollViewer" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="Padding" Value="12,20"/>
    </Style>

    <!-- Nav Section Container -->
    <Style x:Key="NavSectionContainer" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Nav Section Title -->
    <Style x:Key="NavSectionTitle" TargetType="TextBlock">
        <Setter Property="Padding" Value="12,0,0,0"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="Typography.Capitals" Value="AllSmallCaps"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Nav Item Button -->
    <Style x:Key="NavItemButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,12,16,12"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0,0,0,2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#3B82F6" Opacity="0.1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Nav Item Active Button -->
    <Style x:Key="NavItemActiveButton" TargetType="Button" BasedOn="{StaticResource NavItemButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#263B82F6" Offset="0"/>
                    <GradientStop Color="#266366F1" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#60A5FA"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="3,0,0,0"/>
        <Setter Property="BorderBrush" Value="{StaticResource Primary}"/>
    </Style>

    <!-- Nav Item Content Grid (Icon + Text) -->
    <Style x:Key="NavItemContentGrid" TargetType="Grid">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- Nav Item Icon Container -->
    <Style x:Key="NavItemIconContainer" TargetType="Border">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Nav Item Icon Text -->
    <Style x:Key="NavItemIconText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Nav Item Text -->
    <Style x:Key="NavItemText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- Nav Item with Badge Container -->
    <Style x:Key="NavItemBadgeContainer" TargetType="Grid">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- Nav Item Badge -->
    <Style x:Key="NavItemBadge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Nav Item Badge Text -->
    <Style x:Key="NavItemBadgeText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Sidebar Footer -->
    <Style x:Key="SidebarFooter" TargetType="Border">
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="Background" Value="#0F1419"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
    </Style>

    <!-- Sidebar Footer Text -->
    <Style x:Key="SidebarFooterText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Sidebar Divider -->
    <Style x:Key="SidebarDivider" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BorderDefault}"/>
        <Setter Property="Margin" Value="12,16"/>
    </Style>

    <!-- Collapse Button (for collapsible sidebar) -->
    <Style x:Key="SidebarCollapseButton" TargetType="Button">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#3B82F6" Opacity="0.1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Collapsed Sidebar Container (narrow version) -->
    <Style x:Key="CollapsedSidebarContainer" TargetType="Border">
        <Setter Property="Width" Value="72"/>
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>

</ResourceDictionary>