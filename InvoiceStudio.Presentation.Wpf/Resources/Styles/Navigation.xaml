<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================ -->
    <!-- SIDEBAR CONTAINER -->
    <!-- ============================================ -->

    <Style x:Key="Sidebar" TargetType="Border">
        <Setter Property="Width" Value="260"/>
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="24" 
                                Opacity="0.5" ShadowDepth="4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- LOGO SECTION -->
    <!-- ============================================ -->

    <Style x:Key="LogoSection" TargetType="Border">
        <Setter Property="Padding" Value="20,28"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- ============================================ -->
    <!-- NAVIGATION CONTAINER -->
    <!-- ============================================ -->

    <Style x:Key="NavigationContainer" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>
        <Setter Property="Padding" Value="12,20"/>
    </Style>

    <!-- ============================================ -->
    <!-- NAVIGATION SECTION -->
    <!-- ============================================ -->

    <Style x:Key="NavigationSection" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Navigation Section Title (FAVORITES, MANAGEMENT, etc.) -->
    <Style x:Key="NavigationSectionTitle" TargetType="TextBlock" BasedOn="{StaticResource NavSectionTitle}">
        <Setter Property="Padding" Value="8,0,0,0"/>
        <Setter Property="Margin" Value="12,0,0,8"/>
    </Style>

    <!-- ============================================ -->
    <!-- NAVIGATION ITEMS -->
    <!-- ============================================ -->

    <!-- Base Navigation Item Container -->
    <Style x:Key="NavigationItemContainer" TargetType="Border">
        <Setter Property="Margin" Value="0,0,0,2"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="3,0,0,0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <!-- Navigation Item Button -->
    <Style x:Key="NavigationItem" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="NavItemBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="NavItemBorder" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#3B82F6" Opacity="0.1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="NavItemBorder" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#3B82F6" Opacity="0.15"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Active Navigation Item -->
    <Style x:Key="NavigationItemActive" TargetType="Button" BasedOn="{StaticResource NavigationItem}">
        <Setter Property="Background" Value="{StaticResource NavActiveGradient}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryLight}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- ============================================ -->
    <!-- NAVIGATION ITEM CONTENT -->
    <!-- ============================================ -->

    <!-- Navigation Item Layout (Icon + Text) -->
    <Style x:Key="NavigationItemLayout" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Navigation Icon Container -->
    <Style x:Key="NavigationIcon" TargetType="Border" BasedOn="{StaticResource TinyIconContainer}">
        <Setter Property="Margin" Value="0,0,12,0"/>
    </Style>

    <!-- Navigation Icon - Blue -->
    <Style x:Key="NavigationIconBlue" TargetType="Border" BasedOn="{StaticResource NavigationIcon}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#3B82F6" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Icon - Purple -->
    <Style x:Key="NavigationIconPurple" TargetType="Border" BasedOn="{StaticResource NavigationIcon}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#8B5CF6" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Icon - Green -->
    <Style x:Key="NavigationIconGreen" TargetType="Border" BasedOn="{StaticResource NavigationIcon}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#10B981" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Icon - Orange -->
    <Style x:Key="NavigationIconOrange" TargetType="Border" BasedOn="{StaticResource NavigationIcon}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#F97316" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Icon - Pink -->
    <Style x:Key="NavigationIconPink" TargetType="Border" BasedOn="{StaticResource NavigationIcon}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#EC4899" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Text -->
    <Style x:Key="NavigationText" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- ============================================ -->
    <!-- SPECIAL NAVIGATION STATES -->
    <!-- ============================================ -->

    <!-- Navigation Item with Left Border (Active Indicator) -->
    <Style x:Key="NavigationItemWithBorder" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="#3730A3" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="3,0,0,0"/>
        <Setter Property="BorderBrush" Value="{StaticResource Primary}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,0,0,2"/>
    </Style>

    <!-- ============================================ -->
    <!-- NAVIGATION FOOTER -->
    <!-- ============================================ -->

    <Style x:Key="NavigationFooter" TargetType="Border">
        <Setter Property="Background" Value="#1A252F"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
    </Style>

    <!-- ============================================ -->
    <!-- COLLAPSIBLE NAVIGATION -->
    <!-- ============================================ -->

    <!-- Collapsed Sidebar -->
    <Style x:Key="CollapsedSidebar" TargetType="Border" BasedOn="{StaticResource Sidebar}">
        <Setter Property="Width" Value="72"/>
    </Style>

    <!-- Toggle Button for Sidebar -->
    <Style x:Key="SidebarToggle" TargetType="Button">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="{StaticResource BackgroundTertiary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
      
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BackgroundQuaternary}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- BREADCRUMB NAVIGATION -->
    <!-- ============================================ -->

    <Style x:Key="Breadcrumb" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="BreadcrumbItem" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <Style x:Key="BreadcrumbSeparator" TargetType="TextBlock">
        <Setter Property="Text" Value=""/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <Style x:Key="BreadcrumbActive" TargetType="TextBlock" BasedOn="{StaticResource BreadcrumbItem}">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

</ResourceDictionary>