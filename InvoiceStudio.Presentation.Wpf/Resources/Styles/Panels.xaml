<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Main Content Grid (2 columns: Sidebar + Main) -->
    <Style x:Key="MainContentGrid" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimary}"/>
    </Style>

    <!-- Stats Grid Container -->
    <Style x:Key="StatsGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,32"/>
    </Style>

    <!-- Two Column Grid (50/50) -->
    <Style x:Key="TwoColumnGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Three Column Grid (Equal) -->
    <Style x:Key="ThreeColumnGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Form Grid (Label + Input pairs) -->
    <Style x:Key="FormGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Content Stack (Vertical spacing) -->
    <Style x:Key="ContentStack" TargetType="StackPanel">
        <Setter Property="Margin" Value="32"/>
    </Style>

    <!-- Tight Stack (Less spacing) -->
    <Style x:Key="TightStack" TargetType="StackPanel">
        <Setter Property="Margin" Value="16"/>
    </Style>

    <!-- Horizontal Stack (with gap) -->
    <Style x:Key="HorizontalStack" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <!-- Horizontal Stack with 12px gap -->
    <Style x:Key="HorizontalStackGap12" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="-6,0,0,0"/>
    </Style>

    <!-- Horizontal Stack with 8px gap -->
    <Style x:Key="HorizontalStackGap8" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="-4,0,0,0"/>
    </Style>

    <!-- Vertical Stack (with gap) -->
    <Style x:Key="VerticalStack" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <!-- Vertical Stack with 16px gap -->
    <Style x:Key="VerticalStackGap16" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <!-- Vertical Stack with 24px gap -->
    <Style x:Key="VerticalStackGap24" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <!-- Section Container (margin bottom) -->
    <Style x:Key="SectionContainer" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Large Section Container (32px margin bottom) -->
    <Style x:Key="LargeSectionContainer" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,32"/>
    </Style>

    <!-- Centered Stack -->
    <Style x:Key="CenteredStack" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Space Between Grid (items at edges) -->
    <Style x:Key="SpaceBetweenGrid" TargetType="Grid">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- Wrap Panel for tags/badges -->
    <Style x:Key="WrapContainer" TargetType="WrapPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <!-- Sidebar Content Panel -->
    <Style x:Key="SidebarContent" TargetType="StackPanel">
        <Setter Property="Margin" Value="12,20"/>
    </Style>

    <!-- Nav Section Container -->
    <Style x:Key="NavSection" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Uniform Grid (equal sized children) -->
    <Style x:Key="UniformContainer" TargetType="UniformGrid">
        <Setter Property="Rows" Value="1"/>
    </Style>

    <!-- Responsive Stats Grid (auto-fit columns) -->
    <Style x:Key="ResponsiveStatsGrid" TargetType="UniformGrid">
        <Setter Property="Columns" Value="4"/>
        <Setter Property="Rows" Value="1"/>
    </Style>

    <!-- Card Content Panel (padding inside cards) -->
    <Style x:Key="CardContentPanel" TargetType="StackPanel">
        <Setter Property="Margin" Value="28"/>
    </Style>

    <!-- Section Content Panel (padding inside sections) -->
    <Style x:Key="SectionContentPanel" TargetType="StackPanel">
        <Setter Property="Margin" Value="28,24"/>
    </Style>

    <!-- Table Container (no padding) -->
    <Style x:Key="TableContainer" TargetType="Border">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

</ResourceDictionary>