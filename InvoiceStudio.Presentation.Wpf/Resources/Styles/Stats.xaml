<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Stat Card Container -->
    <Style x:Key="StatCardContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="28"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="32" 
                                Opacity="0.4" ShadowDepth="8"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource Primary}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Stat Header Grid (Label on left, Icon on right) -->
    <Style x:Key="StatHeader" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Stat Icon Circle -->
    <Style x:Key="StatIconCircle" TargetType="Border">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <!-- Stat Icon Text -->
    <Style x:Key="StatIconText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Stat Label Stack -->
    <Style x:Key="StatLabelStack" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Stat Value Stack -->
    <Style x:Key="StatValueStack" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,8,0,0"/>
    </Style>

    <!-- Stat Change Container (with icon) -->
    <Style x:Key="StatChangeContainer" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- Stat Change Arrow (Up) -->
    <Style x:Key="StatArrowUp" TargetType="TextBlock">
        <Setter Property="Text" Value="↑"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource Success}"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
    </Style>

    <!-- Stat Change Arrow (Down) -->
    <Style x:Key="StatArrowDown" TargetType="TextBlock">
        <Setter Property="Text" Value="↓"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource Error}"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
    </Style>

    <!-- Stat Divider (optional separator) -->
    <Style x:Key="StatDivider" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BorderDefault}"/>
        <Setter Property="Margin" Value="0,16,0,16"/>
    </Style>

    <!-- Stat Footer (for additional info) -->
    <Style x:Key="StatFooter" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>

    <!-- Mini Stat (smaller version) -->
    <Style x:Key="MiniStatContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Mini Stat Value -->
    <Style x:Key="MiniStatValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0,8,0,4"/>
    </Style>

    <!-- Inline Stat (horizontal layout) -->
    <Style x:Key="InlineStatContainer" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Inline Stat Label -->
    <Style x:Key="InlineStatLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
        <Setter Property="MinWidth" Value="100"/>
    </Style>

    <!-- Inline Stat Value -->
    <Style x:Key="InlineStatValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Stat Progress Bar Container -->
    <Style x:Key="StatProgressContainer" TargetType="Grid">
        <Setter Property="Height" Value="8"/>
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>

    <!-- Stat Progress Background -->
    <Style x:Key="StatProgressBackground" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <!-- Stat Progress Fill -->
    <Style x:Key="StatProgressFill" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Stat Percentage Text -->
    <Style x:Key="StatPercentage" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- Sparkline Container (for mini charts) -->
    <Style x:Key="SparklineContainer" TargetType="Border">
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>

</ResourceDictionary>