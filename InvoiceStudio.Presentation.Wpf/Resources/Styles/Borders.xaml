<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Border with rounded corners -->
    <Style x:Key="RoundedBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Gradient Top Border (3px accent line at top of cards) -->
    <Style x:Key="GradientTopBorder" TargetType="Rectangle">
        <Setter Property="Height" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Fill" Value="{StaticResource TopBorderGradient}"/>
        <Setter Property="RadiusX" Value="16"/>
        <Setter Property="RadiusY" Value="16"/>
    </Style>

    <!-- Sidebar Border -->
    <Style x:Key="SidebarBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>

    <!-- Divider Line (Horizontal) -->
    <Style x:Key="HorizontalDivider" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BorderDefault}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- Divider Line (Vertical) -->
    <Style x:Key="VerticalDivider" TargetType="Border">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BorderDefault}"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- Content Container (with padding) -->
    <Style x:Key="ContentContainer" TargetType="Border">
        <Setter Property="Padding" Value="32"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Tight Container (less padding) -->
    <Style x:Key="TightContainer" TargetType="Border">
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Nav Item Active Border (left accent) -->
    <Style x:Key="NavItemActiveBorder" TargetType="Border">
        <Setter Property="Width" Value="3"/>
        <Setter Property="Background" Value="{StaticResource Primary}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="CornerRadius" Value="0,2,2,0"/>
    </Style>

    <!-- Bottom Border Only -->
    <Style x:Key="BottomBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <!-- Top Border Only -->
    <Style x:Key="TopBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
    </Style>

    <!-- Left Border Only -->
    <Style x:Key="LeftBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1,0,0,0"/>
    </Style>

    <!-- Right Border Only -->
    <Style x:Key="RightBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>

    <!-- No Border -->
    <Style x:Key="NoBorder" TargetType="Border">
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- Subtle Shadow Border -->
    <Style x:Key="ShadowBorder" TargetType="Border">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" 
                                BlurRadius="24" 
                                Opacity="0.5" 
                                ShadowDepth="4"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>