<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Form Container -->
    <Style x:Key="FormContainer" TargetType="StackPanel">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Form Section -->
    <Style x:Key="FormSection" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,32"/>
    </Style>

    <!-- Form Section Title -->
    <Style x:Key="FormSectionTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Form Section Description -->
    <Style x:Key="FormSectionDescription" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Form Field Container -->
    <Style x:Key="FormField" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Form Field (Horizontal Label + Input) -->
    <Style x:Key="FormFieldHorizontal" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Form Label -->
    <Style x:Key="FormLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Form Label Required -->
    <Style x:Key="FormLabelRequired" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Form Required Star -->
    <Style x:Key="FormRequiredStar" TargetType="TextBlock">
        <Setter Property="Text" Value="*"/>
        <Setter Property="Foreground" Value="{StaticResource Error}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
    </Style>

    <!-- Form Helper Text -->
    <Style x:Key="FormHelperText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Form Error Text -->
    <Style x:Key="FormErrorText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource Error}"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Form Success Text -->
    <Style x:Key="FormSuccessText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource Success}"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Form Row (2 columns) -->
    <Style x:Key="FormRow" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Form Column Left -->
    <Style x:Key="FormColumnLeft" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <!-- Form Column Right -->
    <Style x:Key="FormColumnRight" TargetType="StackPanel">
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>

    <!-- Form Divider -->
    <Style x:Key="FormDivider" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BorderDefault}"/>
        <Setter Property="Margin" Value="0,24,0,24"/>
    </Style>

    <!-- Form Group (Card-like container) -->
    <Style x:Key="FormGroup" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="24,20"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Form Actions Container (Footer buttons) -->
    <Style x:Key="FormActions" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,32,0,0"/>
    </Style>

    <!-- Form Actions Left Aligned -->
    <Style x:Key="FormActionsLeft" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,32,0,0"/>
    </Style>

    <!-- Form Actions Spaced (Space between) -->
    <Style x:Key="FormActionsSpaced" TargetType="Grid">
        <Setter Property="Margin" Value="0,32,0,0"/>
    </Style>

    <!-- Form Submit Button -->
    <Style x:Key="FormSubmitButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Form Cancel Button -->
    <Style x:Key="FormCancelButton" TargetType="Button" BasedOn="{StaticResource DefaultButton}">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
    </Style>

    <!-- Form Reset Button -->
    <Style x:Key="FormResetButton" TargetType="Button" BasedOn="{StaticResource DefaultButton}">
        <Setter Property="MinWidth" Value="100"/>
    </Style>

    <!-- Input Group (Input with prefix/suffix) -->
    <Style x:Key="InputGroup" TargetType="Grid">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Input Prefix -->
    <Style x:Key="InputPrefix" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1,1,0,1"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="8,0,0,8"/>
    </Style>

    <!-- Input Suffix -->
    <Style x:Key="InputSuffix" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,1,1,1"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="0,8,8,0"/>
    </Style>

    <!-- Input Prefix/Suffix Text -->
    <Style x:Key="InputAddonText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Checkbox Group Container -->
    <Style x:Key="CheckboxGroup" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Checkbox Item -->
    <Style x:Key="CheckboxItem" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Checkbox Label -->
    <Style x:Key="CheckboxLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <!-- Radio Group Container -->
    <Style x:Key="RadioGroup" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Radio Item -->
    <Style x:Key="RadioItem" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Radio Label -->
    <Style x:Key="RadioLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <!-- File Upload Container -->
    <Style x:Key="FileUploadContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundTertiary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="2"/>
      
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="24,32"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- File Upload Icon -->
    <Style x:Key="FileUploadIcon" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- File Upload Text -->
    <Style x:Key="FileUploadText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- File Upload Subtext -->
    <Style x:Key="FileUploadSubtext" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Character Counter -->
    <Style x:Key="CharacterCounter" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- Form Inline Field (Label and Input side by side) -->
    <Style x:Key="FormInlineField" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Form Inline Label -->
    <Style x:Key="FormInlineLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="150"/>
    </Style>

</ResourceDictionary>