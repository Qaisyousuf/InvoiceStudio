<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dashboard Main Container -->
    <Style x:Key="DashboardContainer" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimary}"/>
    </Style>

    <!-- Dashboard Content ScrollViewer -->
    <Style x:Key="DashboardScrollViewer" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

    <!-- Dashboard Content Stack -->
    <Style x:Key="DashboardContentStack" TargetType="StackPanel">
        <Setter Property="Margin" Value="32"/>
    </Style>

    <!-- Dashboard Stats Grid (4 columns) -->
    <Style x:Key="DashboardStatsGrid" TargetType="UniformGrid">
        <Setter Property="Columns" Value="4"/>
        <Setter Property="Rows" Value="1"/>
        <Setter Property="Margin" Value="0,0,0,32"/>
    </Style>

    <!-- Dashboard Stats Grid (3 columns) -->
    <Style x:Key="DashboardStatsGrid3" TargetType="UniformGrid">
        <Setter Property="Columns" Value="3"/>
        <Setter Property="Rows" Value="1"/>
        <Setter Property="Margin" Value="0,0,0,32"/>
    </Style>

    <!-- Dashboard Stats Grid (2 columns) -->
    <Style x:Key="DashboardStatsGrid2" TargetType="UniformGrid">
        <Setter Property="Columns" Value="2"/>
        <Setter Property="Rows" Value="1"/>
        <Setter Property="Margin" Value="0,0,0,32"/>
    </Style>

    <!-- Dashboard Stat Card with Spacing -->
    <Style x:Key="DashboardStatCard" TargetType="Border" BasedOn="{StaticResource StatCardContainer}">
        <Setter Property="Margin" Value="0,0,20,0"/>
    </Style>

    <!-- Dashboard Stat Card Last (no right margin) -->
    <Style x:Key="DashboardStatCardLast" TargetType="Border" BasedOn="{StaticResource StatCardContainer}">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Dashboard Section Card -->
    <Style x:Key="DashboardSectionCard" TargetType="Border" BasedOn="{StaticResource SectionCard}">
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Dashboard Two Column Layout -->
    <Style x:Key="DashboardTwoColumnGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Dashboard Left Column -->
    <Style x:Key="DashboardLeftColumn" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,12,0"/>
    </Style>

    <!-- Dashboard Right Column -->
    <Style x:Key="DashboardRightColumn" TargetType="StackPanel">
        <Setter Property="Margin" Value="12,0,0,0"/>
    </Style>

    <!-- Dashboard Quick Actions Container -->
    <Style x:Key="QuickActionsContainer" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Dashboard Quick Action Button -->
    <Style x:Key="QuickActionButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundTertiary}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BackgroundQuaternary}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Primary}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#3B82F6" Opacity="0.1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Dashboard Widget Container -->
    <Style x:Key="DashboardWidget" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Dashboard Widget Header -->
    <Style x:Key="DashboardWidgetHeader" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Dashboard Widget Title -->
    <Style x:Key="DashboardWidgetTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Dashboard Widget Subtitle -->
    <Style x:Key="DashboardWidgetSubtitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
    </Style>

    <!-- Dashboard Empty State Container -->
    <Style x:Key="EmptyStateContainer" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,60,0,60"/>
    </Style>

    <!-- Dashboard Empty State Icon -->
    <Style x:Key="EmptyStateIcon" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="Opacity" Value="0.3"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Dashboard Empty State Text -->
    <Style x:Key="EmptyStateText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Dashboard Empty State Subtext -->
    <Style x:Key="EmptyStateSubtext" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Dashboard Activity Item -->
    <Style x:Key="ActivityItem" TargetType="Border">
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#3B82F6" Opacity="0.05"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Dashboard Activity Icon -->
    <Style x:Key="ActivityIcon" TargetType="Border">
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
    </Style>

    <!-- Dashboard Activity Title -->
    <Style x:Key="ActivityTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Dashboard Activity Time -->
    <Style x:Key="ActivityTime" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
    </Style>

    <!-- Dashboard Chart Container -->
    <Style x:Key="ChartContainer" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,16,0,0"/>
        <Setter Property="Height" Value="200"/>
    </Style>

    <!-- Dashboard KPI Card -->
    <Style x:Key="KPICard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundTertiary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Dashboard KPI Label -->
    <Style x:Key="KPILabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Dashboard KPI Value -->
    <Style x:Key="KPIValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Dashboard Grid Spacer (for spacing between elements) -->
    <Style x:Key="GridSpacer" TargetType="Border">
        <Setter Property="Width" Value="20"/>
    </Style>

</ResourceDictionary>